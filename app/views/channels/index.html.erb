<h1>Daily Logs</h1>
  <div id="log">
    <div id="channel">
      Channel
      <ul>
        <% @channels.each do |channel| %>
          <li class="<%= 'active' if @channel == channel.name_without_sign %>">
            <%= link_to channel.name, {:controller => "channels", :action => "index", :id => channel.name_without_sign} %>
          </li>
        <% end %>
      </ul>
    </div>
    <div id="year">
      Y
      <ul>
        <% @years.each do |year| %>
          <li class="<%= 'active' if @year == year.to_s %>">
            <%= link_to year, {:controller => "channels", :action => "index", :id => @channel, :year => year} %>
          </li>
        <% end if @years.present? %>
      </ul>
    </div>
    <div id="month">
      M
      <ul>
        <% @months.each do |month| %>
          <li class="<%= 'active' if @month == month.to_s %>">
            <%= link_to month, {:controller => "channels", :action => "index", :id => @channel, :year => @year, :month => month} %>
          </li>
        <% end if @months.present? %>
      </ul>
    </div>
    <div id="day">
      D
      <ul>
        <% @days.each do |day| %>
          <li class="<%= 'active' if @day == day.to_s %>">
            <%= link_to day, {:controller => "channels", :action => "index", :id => @channel, :year => @year, :month => @month, :day => day} %>
          </li>
        <% end if @days.present? %>
      </ul>
    </div>
    <div id="message">
      <table class="table">
        <thead>
        <tr>
          <th>Time</th>
          <th>User</th>
          <th>Text</th>
        </tr>
        </thead>

        <tbody>
        <% @messages.each do |message| %>
          <tr>
            <td style="width: 60px"><%= link_to message.created_at.to_s(:irc_time), message %></td>
            <td><%= message.user %></td>
            <td class="<%= 'text-muted' if message.command == "NOTICE" %>"><%= message.text %></td>
          </tr>
        <% end if @messages.present? %>
        </tbody>
      </table>
    </div>
  </div>
