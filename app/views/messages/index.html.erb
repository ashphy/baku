<h1>Messgaes</h1>
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Channel</th>
      <th>Text</th>
      <th>User</th>
      <th>Command</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% if @messages.present? %>
      <% @messages.each do |message| %>
        <tr>
          <td style="width: 200px"><%= message.created_at %></td>
          <td><%= message.channel.name %></td>
          <td><%= message.text %></td>
          <td><%= message.user %></td>
          <td><%= message.command %></td>
          <td><%= link_to 'Show', message %></td>
          <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= paginate @messages %>
